<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Light mode only -->
    <style name="Base.Theme.SyncNote" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorAccent">@color/accent</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Error color -->
        <item name="colorError">@color/error</item>
        
        <!-- Dialog and alert backgrounds -->
        <item name="android:dialogTheme">@style/DialogTheme</item>
        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>

        <!-- Menu and Dialog backgrounds -->
        <item name="android:popupMenuStyle">@style/PopupMenuStyle</item>
        <item name="android:contextPopupMenuStyle">@style/PopupMenuStyle</item>
        <item name="popupMenuBackground">@drawable/bg_menu_popup</item>
        <item name="android:popupBackground">@drawable/bg_menu_popup</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>

    <style name="Theme.SyncNote" parent="Base.Theme.SyncNote" />
    
    <!-- Button Style -->
    <style name="PrimaryButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">12dp</item>
    </style>
    
    <!-- Card Style -->
    <style name="NoteCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>
    
    <!-- Text Input Style -->
    <style name="TextInputStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/text_secondary</item>
    </style>

    <!-- Popup menu style to ensure readable text on white background -->
    <style name="PopupMenuStyle" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@drawable/bg_menu_popup</item>
    </style>

    <!-- Overflow menu style -->
    <style name="OverflowMenuStyle" parent="Widget.Material3.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/bg_menu_popup</item>
    </style>

    <!-- Dialog Theme -->
    <style name="DialogTheme" parent="Theme.Material3.Light.Dialog">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
    </style>

    <!-- Alert Dialog Theme -->
    <style name="AlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:background">@color/white</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AlertDialogTitle</item>
    </style>

    <!-- Alert Dialog Title -->
    <style name="AlertDialogTitle" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/text_primary</item>
    </style>
</resources>