<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Force Light theme even in night mode -->
    <style name="Base.Theme.SyncNote" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorAccent">@color/accent</item>
        
        <!-- Background colors - Light mode -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        
        <!-- Text colors - Light mode -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Error color -->
        <item name="colorError">@color/error</item>
        
        <!-- Dialog and alert backgrounds -->
        <item name="android:dialogTheme">@style/DialogTheme</item>
        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>

        <!-- Menu and Dialog backgrounds -->
        <item name="android:popupMenuStyle">@style/PopupMenuStyle</item>
        <item name="android:contextPopupMenuStyle">@style/PopupMenuStyle</item>
        <item name="popupMenuBackground">@drawable/bg_menu_popup</item>
        <item name="android:popupBackground">@drawable/bg_menu_popup</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>
    <!-- Popup menu style to ensure readable text on white background even in night mode -->
    <style name="PopupMenuStyle" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@drawable/bg_menu_popup</item>
    </style>

    <!-- Overflow menu style -->
    <style name="OverflowMenuStyle" parent="Widget.Material3.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/bg_menu_popup</item>
    </style>

    <!-- Dialog Theme -->
    <style name="DialogTheme" parent="Theme.Material3.Light.Dialog">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
    </style>

    <!-- Alert Dialog Theme -->
    <style name="AlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:background">@color/white</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AlertDialogTitle</item>
    </style>

    <!-- Alert Dialog Title -->
    <style name="AlertDialogTitle" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/text_primary</item>
    </style>
</resources>