<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:elevation="2dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_back"
            app:navigationIconTint="@color/text_primary"
            app:title="Edit Note"
            app:titleTextColor="@color/text_primary" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Status Bar with Category and Color -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/card_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp">

            <TextView
                android:id="@+id/statusLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_badge"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:text="New"
                android:textColor="@color/primary"
                android:textSize="12sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/colorIndicator"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/bg_color_indicator" />

            <Spinner
                android:id="@+id/categorySpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/lastSavedLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/text_hint"
                android:textSize="11sp" />

        </LinearLayout>

        <!-- Formatting Toolbar -->
        <HorizontalScrollView
            android:id="@+id/formattingToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/card_background"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp">

                <ImageButton
                    android:id="@+id/btnBold"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Bold"
                    android:src="@drawable/ic_format_bold"
                    app:tint="@color/text_primary" />

                <ImageButton
                    android:id="@+id/btnItalic"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Italic"
                    android:src="@drawable/ic_format_italic"
                    app:tint="@color/text_primary" />

                <ImageButton
                    android:id="@+id/btnUnderline"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Underline"
                    android:src="@drawable/ic_format_underline"
                    app:tint="@color/text_primary" />

                <ImageButton
                    android:id="@+id/btnStrikethrough"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Strikethrough"
                    android:src="@drawable/ic_format_strikethrough"
                    app:tint="@color/text_primary" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@color/divider" />

                <ImageButton
                    android:id="@+id/btnBulletList"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Bullet List"
                    android:src="@drawable/ic_format_list_bulleted"
                    app:tint="@color/text_primary" />

                <ImageButton
                    android:id="@+id/btnNumberedList"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Numbered List"
                    android:src="@drawable/ic_format_list_numbered"
                    app:tint="@color/text_primary" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@color/divider" />

                <ImageButton
                    android:id="@+id/btnAlignLeft"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Align Left"
                    android:src="@drawable/ic_format_align_left"
                    app:tint="@color/text_primary" />

                <ImageButton
                    android:id="@+id/btnAlignCenter"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Align Center"
                    android:src="@drawable/ic_format_align_center"
                    app:tint="@color/text_primary" />

                <ImageButton
                    android:id="@+id/btnAlignRight"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Align Right"
                    android:src="@drawable/ic_format_align_right"
                    app:tint="@color/text_primary" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@color/divider" />

                <ImageButton
                    android:id="@+id/btnUndo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Undo"
                    android:src="@drawable/ic_undo"
                    app:tint="@color/text_primary" />

                <ImageButton
                    android:id="@+id/btnRedo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Redo"
                    android:src="@drawable/ic_redo"
                    app:tint="@color/text_primary" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@color/divider" />

                <ImageButton
                    android:id="@+id/btnColor"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Note Color"
                    android:src="@drawable/ic_palette"
                    app:tint="@color/text_primary" />

                <ImageButton
                    android:id="@+id/btnPin"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Pin Note"
                    android:src="@drawable/ic_pin"
                    app:tint="@color/primary" />

            </LinearLayout>

        </HorizontalScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider" />

        <!-- Editor Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Title Input -->
                <EditText
                    android:id="@+id/titleInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Note Title"
                    android:inputType="textCapSentences"
                    android:maxLines="2"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_hint"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="16dp"
                    android:background="@color/divider" />

                <!-- Rich Text Editor -->
                <jp.wasabeef.richeditor.RichEditor
                    android:id="@+id/richEditor"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Bottom Action Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/card_background"
            android:elevation="8dp"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Cancel Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancelButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="Cancel"
                android:textSize="16sp"
                app:cornerRadius="12dp"
                app:strokeColor="@color/text_secondary" />

            <!-- Save Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/saveButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="Save"
                android:textSize="16sp"
                app:cornerRadius="12dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Progress Overlay -->
    <FrameLayout
        android:id="@+id/progressOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
